{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
